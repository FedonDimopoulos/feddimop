<%= form_with(model: property, class: 'new_property_form') do |form| %>
  <% if property.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, size: "155", value: "Classified title up to 155 chars", onclick: "document.getElementById('property_title').value = '';" %><br />
  </div>

  <div>
  	<%= form.label :type, "Type" %>
    <%= form.collection_select :type_id, Type.all, :id, :name, { prompt: "Select type" } %><br />
  </div>
  
  <div>
    <%= form.label :area %>
    <%= form.text_field :area, value: "Type in the property's area", onclick: "document.getElementById('property_area').value = '';" %>
  </div>

  <div>
    <%= form.label :price, "Price in Euros" %>
    <%= form.text_field :price, value: "Amount", onclick: "document.getElementById('property_price').value = '';" %>
  </div>

  <div>
    <%= form.label :description, "Extra description" %>
    <%= form.text_area :description, size: "60x12", value: "Type here",  onclick: "document.getElementById('property_description').value = '';" %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>
